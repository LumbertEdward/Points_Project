<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    tools:context=".Admin.Fragments.DetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/purple_700"
            >
            <ImageView
                android:id="@+id/backDet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                app:tint="@android:color/darker_gray"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Details"
                android:textColor="@android:color/white"
                android:fontFamily="@font/nunitobold"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="50dp"
                    android:paddingBottom="30dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="First Name"
                                android:textColor="@color/purple_700"
                                android:fontFamily="@font/nunitobold"
                                android:textSize="20sp"
                                />
                            <TextView
                                android:id="@+id/firstUser"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lumbert"
                                android:textColor="@android:color/darker_gray"
                                android:fontFamily="@font/nunitobold"
                                android:textSize="16sp"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Last Name"
                                android:textColor="@color/purple_700"
                                android:fontFamily="@font/nunitobold"
                                android:textSize="20sp"
                                />
                            <TextView
                                android:id="@+id/lastUser"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Omwaga"
                                android:textColor="@android:color/darker_gray"
                                android:fontFamily="@font/nunitobold"
                                android:textSize="16sp"
                                />

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textColor="@color/purple_700"
                            android:fontFamily="@font/nunitobold"
                            android:textSize="20sp"
                            />
                        <TextView
                            android:id="@+id/emailUser"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="lambo@gmail.com"
                            android:textColor="@android:color/darker_gray"
                            android:fontFamily="@font/nunitobold"
                            android:textSize="16sp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Referred By"
                            android:textColor="@color/purple_700"
                            android:fontFamily="@font/nunitobold"
                            android:textSize="20sp"
                            />
                        <TextView
                            android:id="@+id/referUser"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="lambo@gmail.com"
                            android:textColor="@android:color/darker_gray"
                            android:fontFamily="@font/nunitobold"
                            android:textSize="16sp"
                            />

                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        >
                        <Spinner
                            android:id="@+id/spinner"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            />
                    </RelativeLayout>

                    <Button
                        android:id="@+id/btnRefer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Save"
                        android:textColor="@android:color/white"
                        android:backgroundTint="@color/purple_700"
                        android:layout_marginTop="50dp"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        >
                        <ProgressBar
                            android:id="@+id/progressAdmin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            />
                    </RelativeLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </RelativeLayout>


    </LinearLayout>

</FrameLayout>