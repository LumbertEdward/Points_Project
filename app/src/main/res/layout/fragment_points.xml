<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.PointsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    >
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardPoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@android:color/holo_orange_dark"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="5dp"
                        >
                        <RelativeLayout
                            android:layout_width="180dp"
                            android:layout_height="150dp"
                            android:padding="20dp"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                >
                                <TextView
                                    android:id="@+id/totalPoints"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:layout_gravity="center_horizontal"
                                    android:textColor="@android:color/white"
                                    android:fontFamily="@font/nunitobold"
                                    android:textSize="25sp"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Total Points"
                                    android:layout_gravity="center_horizontal"
                                    android:textColor="@android:color/white"
                                    android:fontFamily="@font/robotobold"
                                    />
                            </LinearLayout>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardHistory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@android:color/holo_green_dark"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="5dp"
                        android:layout_marginLeft="10dp"
                        >
                        <RelativeLayout
                            android:layout_width="180dp"
                            android:layout_height="150dp"
                            android:padding="20dp"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                >
                                <TextView
                                    android:id="@+id/totalAmount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ksh 0"
                                    android:layout_gravity="center_horizontal"
                                    android:textColor="@android:color/white"
                                    android:fontFamily="@font/nunitobold"
                                    android:textSize="25sp"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Total Amount"
                                    android:layout_gravity="center_horizontal"
                                    android:textColor="@android:color/white"
                                    android:fontFamily="@font/nunitobold"
                                    />
                            </LinearLayout>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/purple_700"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="20dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Redeem Points"
                        android:textColor="@color/purple_700"
                        android:fontFamily="@font/nunitobold"
                        android:textSize="25sp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Specify Points"
                            android:textColor="@android:color/darker_gray"
                            android:fontFamily="@font/nunitobold"
                            android:textSize="16sp"
                            />
                        <EditText
                            android:id="@+id/pointsRedeeming"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/points_back"
                            android:elevation="4dp"
                            android:layout_marginTop="5dp"
                            android:hint="Enter Points"
                            android:fontFamily="@font/nunitobold"
                            android:textColor="@color/purple_700"
                            android:padding="10dp"
                            android:textSize="15sp"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Equivalent Amount"
                            android:textColor="@android:color/darker_gray"
                            android:fontFamily="@font/nunitobold"
                            android:textSize="16sp"
                            />
                        <TextView
                            android:id="@+id/equivAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/points_back"
                            android:elevation="10dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/nunitobold"
                            android:textColor="@color/purple_700"
                            android:padding="10dp"
                            android:textSize="15sp"
                            android:hint="Ksh 0"
                            />

                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <Button
                            android:id="@+id/btnRedeem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunitobold"
                            android:text="Redeem"
                            android:backgroundTint="@color/purple_700"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        >
                        <ProgressBar
                            android:id="@+id/progressPoints"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            />
                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</FrameLayout>