<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pointsproject">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PointsProject"
        android:usesCleartextTraffic="true">
        <activity android:name=".Admin.Classes.PaymentActivity"></activity>
        <activity android:name=".Admin.Classes.AdminLogin" />
        <activity android:name=".Admin.Classes.AdminActivity" />
        <activity android:name=".Classes.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Account.Register" />
        <activity android:name=".Account.Login" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>